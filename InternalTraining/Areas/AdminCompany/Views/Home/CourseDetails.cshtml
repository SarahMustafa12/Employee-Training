 <main class="main">

    <!-- Course Details Section -->
    <section id="course-details" class="section course-details">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Course Details</h2>
                <p>Course Name Goes Here</p>
            </div>

            <div class="row gy-4">
                <div class="col-lg-5 d-flex align-items-center justify-content-center">
                    <img src="/images/admin/default-course.png" alt="Course Image" class="rounded-circle"
                         style="width: 150px; height: 150px; object-fit: cover;" />
                </div>

                <div class="col-lg-7">
                    <div class="course-content">
                        <h3>Course Name</h3>
                        <p class="description">Course description goes here. This is a sample course description to explain what the course covers.</p>

                        <ul class="list-unstyled mt-3">
                            <li><strong>Number of Chapters:</strong> 2</li>
                        </ul>

                        <a href="/company/home" class="btn btn-secondary mt-4"
                           style="background-color: #143D60; color: #fff; border-color: #143D60;">← Back</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Course Video + Sidebar Section -->
    <section class="section">
        <div class="container-fluid">
            <div class="row">

                <!-- Sidebar: Fixed -->
                <div class="col-lg-4 mb-4">
                    <div class="card" style="position: sticky; top: 100px;">
                        <div class="card-body">
                            <h5 class="card-title">Course Outline</h5>
                            <div class="accordion" id="courseOutline">

                                <!-- Chapter 1 -->
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="heading1">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapse1">
                                            Chapter 1: Introduction
                                        </button>
                                    </h2>
                                    <div id="collapse1" class="accordion-collapse collapse" data-bs-parent="#courseOutline">
                                        <div class="accordion-body">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">
                                                    <a href="#" class="lesson-link" data-video-url="https://www.youtube.com/embed/dQw4w9WgXcQ">
                                                        Lesson
                                                        1: Welcome
                                                    </a>
                                                </li>
                                                <li class="list-group-item">
                                                    <a href="#" class="lesson-link" data-video-url="https://www.youtube.com/embed/9bZkp7q19f0">
                                                        Lesson
                                                        2: Overview
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <!-- Chapter 2 -->
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="heading2">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapse2">
                                            Chapter 2: Basics
                                        </button>
                                    </h2>
                                    <div id="collapse2" class="accordion-collapse collapse" data-bs-parent="#courseOutline">
                                        <div class="accordion-body">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">
                                                    <a href="#" class="lesson-link" data-video-url="https://www.youtube.com/embed/kJQP7kiw5Fk">
                                                        Lesson
                                                        1: Getting Started
                                                    </a>
                                                </li>
                                                <li class="list-group-item">
                                                    <a href="#" class="lesson-link" data-video-url="https://www.youtube.com/embed/fLexgOxsZu0">
                                                        Lesson
                                                        2: First Steps
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Video Player -->
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="ratio ratio-16x9" style="max-height: 400px;">
                                <iframe id="videoPlayer" src="" frameborder="0" allowfullscreen></iframe>
                            </div>
                            <h4 class="mt-3" id="lessonTitle">Select a lesson to begin</h4>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main> 


 <!-- Script to handle video switching -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.lesson-link').forEach(link => {
        link.addEventListener('click', function (e) {
          e.preventDefault();
          const videoUrl = this.getAttribute('data-video-url');
          const title = this.textContent;
          document.getElementById('videoPlayer').src = videoUrl;
          document.getElementById('lessonTitle').textContent = title;
          window.scrollTo({
            top: document.getElementById('videoPlayer').getBoundingClientRect().top + window.scrollY - 100,
            behavior: 'smooth'
          });
        });
      });
    });
</script>